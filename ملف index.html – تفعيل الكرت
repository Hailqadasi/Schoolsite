<h2>تفعيل كرت الدخول</h2>

<input type="text" id="card" placeholder="أدخل رقم الكرت">
<button onclick="activate()">تفعيل</button>

<p id="msg"></p>

<script src="data.js"></script>
<script>
function activate(){
  let c = document.getElementById("card").value;
  if(cards[c] && !localStorage.getItem("used")){
    localStorage.setItem("used", c);
    localStorage.setItem("start", Date.now());
    window.location = "check.html";
  }else{
    document.getElementById("msg").innerText = "كرت غير صالح أو مستخدم";
  }
}
</script>

